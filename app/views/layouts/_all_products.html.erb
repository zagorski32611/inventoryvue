<table class="table">    
    <% unless @products.nil? %>
        <tr>
            <th> Name </th>
            <th> Part Number </th>
            <th> SKU </th>
            <th> Quantity </th>
            <th> Vendor </th>
            <th> Cost </th>
            <th> Retail Price </th>
            <th> Wholesale </th>
        </tr>
        <% @products.each do |pr| %>
        <tr>
            <td><%= pr.name %></td>
            <td><%= pr.part_number %></td>
            <td><%= pr.sku %></td>
            <td><%= pr.quantity %></td>
            <td><%= pr.vendor %></td>
            <td><%= pr.cost %></td>
            <td><%= pr.retail_price %><td>
            <td><%= pr.wholesale_price %></td>
        </tr>
        <% end %>
    <% else %>
        <h3> No Products to show :( </h3>
        <% link_to root_path %>
    <% end %>
</table>